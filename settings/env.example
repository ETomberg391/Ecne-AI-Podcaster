# .env file for AI Podcast Generator

# --- Model Selection ---
# Specifies the default model configuration to use from ai_models.yml
# Options: default_model, gemini_flash (or others defined in ai_models.yml)
DEFAULT_MODEL_CONFIG="default_model" # Change this to 'gemini_flash' to use Gemini by default

# --- TTS Provider Configuration ---
# Choose between 'qwen3' (default, higher quality, voice cloning) or 'orpheus' (legacy)
TTS_PROVIDER="qwen3"

# Qwen3 TTS API Settings (default provider)
# The Qwen3 TTS service runs locally via the EcneAI-Qwen-3-TTS-api
QWEN3_API_HOST="127.0.0.1"
QWEN3_API_PORT=8000
QWEN3_MODEL="qwen3-tts-1.7b-customvoice"  # Options: qwen3-tts-1.7b-base, qwen3-tts-1.7b-customvoice

# Default voices for Qwen3 (preset speakers)
# Available: Ryan, Aiden (English Male), Serena, Vivian (Chinese/English Female), 
#            Sohee (Korean Female), Ono_Anna (Japanese Female), 
#            Dylan, Uncle_Fu, Eric (Chinese Male)
QWEN3_HOST_VOICE="Ryan"
QWEN3_GUEST_VOICE="Serena"

# Orpheus TTS API Settings (legacy provider)
ORPHEUS_API_HOST="127.0.0.1"
ORPHEUS_API_PORT=5005

# Default voices for Orpheus
# Available: tara, leah, jess, leo, dan, mia, zac, zoe (English + other languages)
ORPHEUS_HOST_VOICE="leo"
ORPHEUS_GUEST_VOICE="tara"

# --- Search APIs ---
# Google Custom Search API Credentials
# 1. Get API Key from Google Cloud Console (Credentials page)
GOOGLE_API_KEY=""
# 2. Get Search Engine ID (cx) from Programmable Search Engine control panel (make sure "Search entire web" is ON)
GOOGLE_CSE_ID=""

# Brave Search API Key (Get from https://api.search.brave.com/)
BRAVE_API_KEY=""

# --- Reddit API (Optional - for Reddit scraping) ---
# Get credentials from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""
REDDIT_USER_AGENT="EcneAIPodcaster/1.0"

# --- HuggingFace Token (Optional - for Qwen3 model download) ---
# Only needed if you want to download models from HuggingFace
# Get token from https://huggingface.co/settings/tokens
HF_TOKEN=""

# --- Qwen3 TTS Advanced Settings ---
# Device settings (auto-detected if not set)
# QWEN3_DEVICE="auto"  # Options: auto, cuda, cpu, mps
# QWEN3_PRECISION="bf16"  # Options: bf16, fp16, fp32
# QWEN3_ENABLE_AUTO_DOWNLOAD="true"
